{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "useDefineForClassFields": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/__tests__/*.ts"
  ]
}
